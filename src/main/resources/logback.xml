<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>PLQuiz.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %class{0}.%method - %msg%n</pattern>
        </encoder>
    </appender>
     
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>